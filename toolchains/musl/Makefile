# musl-cross-make toolchain build
# Placeholder for THE-46 (Toolchains)

ARCH ?= aarch64
BUILD_DIR ?= build

.PHONY: all clean

all:
	@echo "Building musl toolchain for $(ARCH)..."
	@echo "Build directory: $(BUILD_DIR)"
	@mkdir -p $(BUILD_DIR)
	@echo "musl toolchain build completed (placeholder)"

clean:
	@echo "Cleaning musl toolchain build..."
	@rm -rf $(BUILD_DIR)
