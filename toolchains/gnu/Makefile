# glibc cross toolchain build
# Placeholder for THE-46 (Toolchains)

ARCH ?= aarch64
BUILD_DIR ?= build

.PHONY: all clean

all:
	@echo "Building glibc toolchain for $(ARCH)..."
	@echo "Build directory: $(BUILD_DIR)"
	@mkdir -p $(BUILD_DIR)
	@echo "glibc toolchain build completed (placeholder)"

clean:
	@echo "Cleaning glibc toolchain build..."
	@rm -rf $(BUILD_DIR)
