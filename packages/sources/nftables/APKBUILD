# ForgeOS nftables Package Build Script
# Alpine-style APKBUILD for nftables
# Uses centralized version management

pkgname="nftables"
pkgver="${NFTABLES_VERSION}"
pkgrel="0"
pkgdesc="Netfilter packet filtering framework"
url="https://netfilter.org/projects/nftables/"
arch="aarch64"
license="GPL-2.0"
depends=""
makedepends=""
checkdepends=""
subpackages=""

# Use local download from centralized package system
source="file://$(PROJECT_ROOT)/packages/downloads/nftables-${pkgver}.tar.bz2"

build() {
	cd "$builddir"
	./configure --prefix=/usr --sysconfdir=/etc
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}