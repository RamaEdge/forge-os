# ForgeOS dropbear Package Build Script
# Alpine-style APKBUILD for dropbear

pkgname="dropbear"
pkgver="2022.83"
pkgrel="0"
pkgdesc="Lightweight SSH server and client"
url="https://matt.ucc.asn.au/dropbear/dropbear.html"
arch="aarch64"
license="MIT"
depends=""
makedepends=""
checkdepends=""
subpackages=""

source="https://matt.ucc.asn.au/dropbear/releases/dropbear-${pkgver}.tar.bz2"

build() {
	cd "$builddir"
	./configure --prefix=/usr --sysconfdir=/etc
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
